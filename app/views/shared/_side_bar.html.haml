.chat-side
  .side-header
    .side-header_box
      %p.side-header_box_user-name
        = current_user.name
      %ul.side-header_box_menu
        %li.side-header_box_menu_new-group
          = link_to new_group_path do
            %i.fa.fa-edit
        %li.side-header_box_menu_edit-user
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog

     
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          %p.group_group-name
            = group.name
          %p.group_last-messag
            = group.show_last_message

   

